<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/unselectedColortop">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:tabSelectedTextColor="@color/unselectedColortop"
                app:tabTextColor="@color/white"
                app:tabBackground="@drawable/tabs_selector_top"
                android:background="@color/unselectedColortop"
                app:tabIndicator="@null"
                app:tabTextAppearance="@style/CustomTextAppearanceTab">

                <!-- TabItems -->
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabStatement3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabDetailStatement3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabAccountDetails3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FD" />
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabAccountDetails4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loans" />
            </com.google.android.material.tabs.TabLayout>

        </com.google.android.material.card.MaterialCardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:cardBackgroundColor="#652F90"></androidx.cardview.widget.CardView>
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="4dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="#652F90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user"
                    android:layout_alignParentStart="true"
                    android:padding="15dp" />
                <!-- Image View on the left -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ib cool bank Group3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:layout_toEndOf="@id/image_view"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/text_view_codenuumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-xxxxxx-7514"
                        android:drawableRight="@drawable/down"
                        android:drawablePadding="80dp"
                        android:layout_below="@id/text_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:layout_toEndOf="@id/image_view"
                        android:layout_marginStart="16dp"
                        />
                    <TextView
                        android:id="@+id/txtacc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saving Account"
                        android:layout_below="@id/text_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white"
                        android:layout_toEndOf="@id/image_view"
                        android:layout_marginStart="16dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:background="#72FFFFFF" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Unmask"
                            android:drawableLeft="@drawable/show"
                            android:textAllCaps="false"
                            android:foreground="@drawable/border_button" />

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Share Acc"
                            android:drawableLeft="@drawable/share"
                            android:textAllCaps="false"
                            android:foreground="@drawable/border_button" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/indologos"
                    android:layout_alignParentStart="true"
                    android:padding="15dp" />
                <!-- Image View on the left -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="àº±Available Balance"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:layout_toEndOf="@id/image_view"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/text_view_codenuumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="********"
                        android:layout_below="@id/text_view"
                        android:drawableRight="@drawable/show"
                        android:drawablePadding="120dp"

                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:layout_toEndOf="@id/image_view"
                        android:layout_marginStart="16dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"
                        android:background="#72FFFFFF" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/unselectedColor">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/black"
            app:tabBackground="@drawable/tabs_selector"
            android:background="@color/unselectedColor"
            app:tabIndicator="@null"
            app:tabTextAppearance="@style/CustomTextAppearanceTab">

            <!-- TabItems -->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statement" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDetailStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Statement" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabAccountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Details" />
        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>