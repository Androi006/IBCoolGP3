<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="#4B2979"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/laoflat"
        android:src="@drawable/laoflat"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ibcoollogo"
        android:src="@drawable/iblogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your 6-digits PIN"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinedt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:ems="15"
        android:hint="PIN"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:textSize="20dp"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PIN? CLICK HERE"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/piglogo"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/piglogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/biobtn"
                android:src="@drawable/biobtn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@color/bgcolor_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Biometric Login"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="100dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/morebtn"
                android:src="@drawable/morebtn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@color/bgcolor_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="More"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>